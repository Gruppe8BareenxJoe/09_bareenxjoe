---
import Layout from "../layouts/Layout.astro";
---

<section>
  <div class="image-container">
    <img class="fullscrean" src="/assets/herocards.webp" alt="hero_img" />
    <div class="overlay"></div>
    <div class="text-overlay">
      <h1><i>bareen</i> x Joe & The Juice</h1>
    </div>
  </div>
</section>

<style>
  .image-container {
    position: relative;
    width: 100vw;
    height: 70vh;
    overflow: hidden;
  }

  .fullscrean {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 0;
  }

  .text-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    z-index: 1;
    text-align: center;
    padding: 20px;
    font-size: 2rem;
    font-family: "Helvetica", sans-serif;
    font-weight: bold;
  }
  @media screen and (max-width: 900px) {
    .image-container {
      position: relative;
      width: 100%;
      height: 40vh;
      overflow: hidden;
    }
  }
</style>
